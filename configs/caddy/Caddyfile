    email frederic@leblais.net
}

# Authelia (authentication service)
auth.leblais.net {
    reverse_proxy localhost:9091
    
    log {
        output file /var/log/caddy/auth-access.log
        format json
    }
    
    tls {
        dns ovh {
            endpoint ovh-eu
            application_key [REDACTED]
            application_secret [REDACTED][REDACTED]
            consumer_key [REDACTED][REDACTED]
        }
    }
}

# Vault (portail d'accueil)
vault.leblais.net {
    root * /var/www/vault
    file_server
    encode gzip
    
    log {
        output file /var/log/caddy/vault-access.log
        format json
    }
    
    tls {
        dns ovh {
            endpoint ovh-eu
            application_key [REDACTED]
            application_secret [REDACTED][REDACTED]
            consumer_key [REDACTED][REDACTED]
        }
    }
}

