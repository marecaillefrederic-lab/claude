[Unit]
Description=rTorrent avec ProtonVPN namespace
After=network.target protonvpn-namespace.service
Requires=protonvpn-namespace.service

[Service]
Type=forking
User=freebox
Group=freebox
ExecStart=/usr/bin/sudo /usr/bin/ip netns exec vpn /usr/bin/screen -d -m -fa -S rtorrent /usr/bin/rtorrent
ExecStop=/usr/bin/killall -w -s 2 /usr/bin/rtorrent
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
