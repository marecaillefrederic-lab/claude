[DEFAULT]
bantime = 1h
findtime = 10m
maxretry = 5
ignoreip = 127.0.0.1/8 ::1 192.168.1.0/24

# ========== SSH ==========
[sshd]
enabled = true
port = 24589
backend = systemd

# ========== SERVICES WEB (Caddy) ==========

[caddy-terminal]
enabled = true
port = http,https
filter = caddy-terminal
logpath = /var/log/caddy/terminal-access.log
maxretry = 3
findtime = 600
bantime = 3600

[fail2ban-stats]
enabled = true
port = http,https
filter = fail2ban-stats
logpath = /var/log/caddy/fail2ban-access.log
maxretry = 20
findtime = 60
bantime = 3600
action = iptables-allports[name=fail2ban-stats]

[caddy-workout]
enabled = true
port = http,https
filter = caddy-workout
logpath = /var/log/caddy/workout-access.log
maxretry = 5
